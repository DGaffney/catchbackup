<div class="row">
  <% last_span = 0;count=0;counts=[0,2,5,9];spans=[12,6,6,4,4,4,3,3,3,3,3,3,3,3];spans.each do |span| %>
    <% article = @articles[count]%>
    <% if article %>
      <span class="span<%= span %> article<%= span %>">
        <h2><a href="<%= article.url %>"><%= article.title %></a></h2>
        <span class="stats"><%= article.created_at.strftime("%b, %d, %Y, at %H:%M") %> <span class="score"><%= (@scores[article.id].to_f.round(2)*100).to_i %>%</span><br /></span>
        <p><img src="<%= Setting.find_by_key("logo").actual_value %>" width="20" height="20" alt=""><%= article.abstract %></p>
      </span>
      <% if counts.include?(count)%>
        </div>
        <hr />
        <div class="row">
      <% end %>
      <%count+=1%>
    <% end %>
  <% end %>
</div>
<%= render :partial => 'slider'%>